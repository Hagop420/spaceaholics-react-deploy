{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "usePlanet.tsx",
    "SeacrhImageAPI.tsx",
    "planetProvider.tsx",
    "LightDarkComponent.tsx",
    "HomePageWrap.tsx",
    "NotFoundPage.tsx",
    "Navbar.tsx",
    "FavoritesPage.tsx",
    "EditingPage.tsx",
    "ApodImageAPI.tsx",
    "App.tsx",
    "main.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
